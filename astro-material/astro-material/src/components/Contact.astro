---
export interface Props {
  sectionTitle?: string;
  namePlaceholder?: string;
  emailPlaceholder?: string;
  messagePlaceholder?: string;
  submitButtonText?: string;
}

const {
  sectionTitle = "Contact Me",
  namePlaceholder = "Your Name",
  emailPlaceholder = "Your Email",
  messagePlaceholder = "Your Message",
  submitButtonText = "Send Message"
} = Astro.props;
---
<section id="contact" class="py-16 md:py-24 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-900 dark:text-white mb-12">
      {sectionTitle}
    </h2>
    <div class="max-w-xl mx-auto bg-gray-50 dark:bg-gray-800 p-6 sm:p-8 rounded-xl shadow-xl">
      <form action="#" method="POST" class="space-y-6">
        <div>
          <label for="contact-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Name</label>
          <input 
            type="text" 
            name="name" 
            id="contact-name" 
            autocomplete="name" 
            placeholder={namePlaceholder}
            class="mt-1 block w-full px-4 py-3 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500"
          />
        </div>
        <div>
          <label for="contact-email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
          <input 
            type="email" 
            name="email" 
            id="contact-email" 
            autocomplete="email" 
            placeholder={emailPlaceholder}
            class="mt-1 block w-full px-4 py-3 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500"
          />
        </div>
        <div>
          <label for="contact-message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Message</label>
          <textarea 
            name="message" 
            id="contact-message" 
            rows="4" 
            placeholder={messagePlaceholder}
            class="mt-1 block w-full px-4 py-3 bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm text-gray-900 dark:text-white placeholder-gray-400 dark:placeholder-gray-500"
          ></textarea>
        </div>
        <div class="text-center">
          <button 
            type="submit"
            class="w-full sm:w-auto bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-8 rounded-lg shadow-md hover:shadow-lg transition-transform transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50"
          >
            {submitButtonText}
          </button>
        </div>
      </form>
      <p class="mt-6 text-xs text-center text-gray-500 dark:text-gray-400">
        Note: This form is for demonstration purposes only and does not submit data.
      </p>
    </div>
  </div>
</section>

<style>
  /* Input fields styling aims for a clean, Material-inspired look.
     - Rounded-md for slightly rounded corners.
     - Shadow-sm for subtle elevation.
     - Focus rings for accessibility.
     - Placeholder styling.
     - Text color for light/dark modes.
     - Background color for inputs in dark mode.
     The button styling (bg-blue-600, shadow-md, hover:shadow-lg) aims for a "contained" Material button look.
     The overall section background (bg-white dark:bg-gray-900) alternates from the Skills section.
     The form itself is presented in a card-like container (bg-gray-50 dark:bg-gray-800 ... shadow-xl).
  */
</style>
