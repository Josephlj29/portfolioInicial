---
import Section from "@/components/Section.astro";
import { projects } from '@cv'; // Corrected import path
import Link from "@/components/Link.astro"; // Assuming a Link component for styled links
---

<Section title="Projects">
  <div class="projects-grid">
    {
      projects.map((project) => (
        <article class="project-card">
          <header>
            <h4>{project.name}</h4>
          </header>
          {project.description && <p class="description">{project.description}</p>}
          {project.highlights && project.highlights.length > 0 && (
            <div class="highlights-section">
              <h5>Key Features & Highlights:</h5>
              <ul class="highlights">
                {project.highlights.map((highlight) => (
                  <li>{highlight}</li>
                ))}
              </ul>
            </div>
          )}
          {project.url && (
            <footer>
              <Link 
                href={project.url} 
                target="_blank" 
                rel="noopener noreferrer"
                className="project-link"
              >
                View Project
              </Link>
            </footer>
          )}
        </article>
      ))
    }
  </div>
</Section>

<style>
  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); /* Responsive grid */
    gap: 1.5rem; /* Space between cards */
  }

  .project-card {
    background-color: #fff;
    border: 1px solid #e2e8f0; /* Light border */
    border-radius: 0.5rem; /* Rounded corners */
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between; /* Pushes footer to the bottom */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
  }

  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }

  .project-card header h4 {
    font-size: 1.3rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.75rem;
  }

  .description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: #4a5568;
    margin-bottom: 1rem;
    flex-grow: 1; /* Allows description to take available space */
  }
  
  .highlights-section {
    margin-bottom: 1rem;
  }

  .highlights-section h5 {
    font-size: 1rem;
    font-weight: 500;
    color: #333;
    margin-bottom: 0.5rem;
  }
  
  .highlights {
    list-style-type: disc;
    padding-left: 1.2rem;
    font-size: 0.9rem;
    color: #4a5568;
  }

  .highlights li {
    margin-bottom: 0.3rem;
    line-height: 1.5;
  }

  .project-card footer {
    margin-top: auto; /* Pushes footer to the bottom */
    padding-top: 1rem; /* Space above the link */
  }

  /* Assuming Link.astro or a global style handles .project-link styling.
     If not, basic styling for the link: */
  .project-link {
    display: inline-block;
    font-size: 0.9rem;
    font-weight: 500;
    color: #3182ce; /* Blue link color */
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .project-link:hover {
    color: #2c5282; /* Darker blue on hover */
    text-decoration: underline;
  }
</style>