---
import Section from "@/components/Section.astro";
import { education } from '@cv'; // Corrected import path
import { formatDateRange } from '@/utils/dateFormatter.js'; // Import from utils
---

<Section title="Education">
  <div class="education-list">
    {
      education.map((edu) => (
        <article class="education-item">
          <header>
            <h3>{edu.institution}</h3>
            <p class="study-details">
              <span class="studyType">{edu.studyType}</span> in <span class="area">{edu.area}</span>
            </p>
            <p class="date-range">{formatDateRange(edu.startDate, edu.endDate)}</p>
          </header>
          {edu.courses && edu.courses.length > 0 && (
            <div class="courses-section">
              <h4>Relevant Courses:</h4>
              <ul class="courses-list">
                {edu.courses.map((course) => (
                  <li>{course}</li>
                ))}
              </ul>
            </div>
          )}
        </article>
      ))
    }
  </div>
</Section>

<style>
  .education-list {
    display: flex;
    flex-direction: column;
    gap: 2rem; /* Space between education entries */
  }

  .education-item {
    background-color: #fff;
    border: 1px solid #e2e8f0;
    border-radius: 0.5rem;
    padding: 1.5rem;
    box-shadow: 0 3px 6px rgba(0,0,0,0.05);
  }

  .education-item header h3 {
    font-size: 1.4rem;
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 0.3rem;
  }

  .study-details {
    font-size: 1.05rem;
    color: #4a5568;
    margin-bottom: 0.25rem;
  }
  
  .study-details .studyType {
    font-weight: 500;
  }

  .study-details .area {
    font-style: italic;
  }

  .date-range {
    font-size: 0.9rem;
    color: #718096;
    margin-bottom: 1rem;
  }

  .courses-section h4 {
    font-size: 1rem;
    font-weight: 500;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .courses-list {
    list-style: disc;
    padding-left: 1.5rem;
    font-size: 0.9rem;
    color: #555;
  }

  .courses-list li {
    margin-bottom: 0.3rem;
    line-height: 1.5;
  }
</style>