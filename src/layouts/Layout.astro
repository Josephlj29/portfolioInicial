---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="main-wrapper">
			<slot />
		</div>
	</body>
</html>
<style is:global>
	html {
		font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
		background: #f4f4f4; /* Light gray background for the page */
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
	}
	
	body {
		margin: 0;
		padding: 0;
		color: #333; /* Dark gray text color for readability */
		font-size: 16px; /* Base font size */
		line-height: 1.6; /* Base line height */
	}

	.main-wrapper {
		max-width: 1100px; /* Max width for content */
		margin: 0 auto; /* Center the wrapper */
		background: #fff; /* White background for the content area */
		padding: 1rem; /* Padding inside the wrapper */
		box-shadow: 0 0 15px rgba(0,0,0,0.05); /* Subtle shadow for depth */
	}
	
	figure {
		margin: 0;
		padding: 0;
	}	
	
	a {
		text-decoration: none;
		color: #007bff; /* Standard blue link color */
		transition: color 0.2s ease-in-out, text-decoration 0.2s ease-in-out;
	}
	a:hover {
		color: #0056b3; /* Darker blue on hover */
		text-decoration: underline;
	}
	
	ul {
		list-style: none;
		margin: 0;
		padding: 0;
	}

	*, *::before, *::after {
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 { /* Applied general font stack from html/body, specific component styles will override */
		margin: 0 0 0.75em 0; /* Default bottom margin for headings */
		font-weight: 600; /* Slightly bolder than default for headings */
		line-height: 1.3;
	}
	/* Removed specific font-family for h1-h4 to inherit from body */

	p {
		color: inherit; /* Inherit from body, or set to #333 directly */
		font-size: 1rem; /* Adjusted from .8rem for better readability */
		line-height: 1.7; /* Slightly increased for p */
		margin: 0 0 1em 0; /* Default bottom margin for paragraphs */
		text-wrap: pretty;
	}

	/* Responsive Design */
	@media (max-width: 768px) {
		body {
			font-size: 15px; /* Slightly smaller base font on mobile */
		}
		.main-wrapper {
			padding: 0.5rem; /* Reduced padding for smaller screens */
		}
		h1 {
			font-size: 2rem; /* Adjust heading font size for mobile */
		}
		h2 {
			font-size: 1.75rem;
		}
		p {
			line-height: 1.6;
		}
	}
</style>
